#include<stdio.h>
int main()
{    
    int a=10, b=20;      
    printf("Before swapping a=%d b=%d",a,b);          /*values are assigned to the integers*/
    a+=b;                                             /* a=10+20=30 */    
    b=a-b;                                            /* b=30-20=10 */    
    a-=b;                                             /* a=30-10=20 */    
    printf("\nAfter swapping a=%d b=%d",a,b);         /*swapping of given two numbers is done and is printed*/
    return 0;  
}   
